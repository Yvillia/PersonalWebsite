{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": ["react-hooks"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "rules": {
      "react-hooks/rules-of-hooks": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "no-console": "warn",
      "prefer-const": "warn",
      "no-var": "warn",
      "no-unused-expressions": "warn",
      "no-unused-vars": "warn",
      "prettier/prettier": "warn"
    }
  }